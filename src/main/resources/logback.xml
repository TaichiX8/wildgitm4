<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>./resources/log/crear_capacitacion.log</file> <!-- Cambia la ruta por la ubicaciÃ³n deseada del archivo de log -->
        <append>true</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="FILE" />
    </root>
</configuration>
